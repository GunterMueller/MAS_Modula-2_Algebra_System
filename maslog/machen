export MOCKA=/usr/local/mocka
#export MOCKAM2="-d  $MURUS/m2bin -CcallsMocka"
export MOCKAM2="-d  ../maskern/m2bin -d ../maslisp/m2bin -d ../masarith/m2bin "
export MOCKALINK="-lpthread -L/usr/X11R6/lib -lX11"




B=./m2bin
rm -f $B/* # alte Kompilate werden entfernt


# Definition Modules :
for d in MLOGBASE.def MASLOG.def  MLDEMO.def    MLOGIO.def  PQBASE.def  PQSMPL.def  RQEPRRC.def  TFORM.def
do
 echo $d
 m=${d%.def}
 m2 -s $m
done

# Implementation Modules: 
for d in  MASLOG.mod  MLDEMO.mod  MLOGBASE.mod  MLOGIO.mod  PQBASE.mod  PQSMPL.mod  RQEPRRC.mod  TFORM.mod
do
 echo $d
 m=${d%.mod}
 m2 -c $m
done

