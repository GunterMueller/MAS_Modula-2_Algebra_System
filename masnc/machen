export MOCKA=/usr/local/mocka
#export MOCKAM2="-d  $MURUS/m2bin -CcallsMocka"
export MOCKAM2="-d  ../maskern/m2bin -d ../masarith/m2bin -d ../masring/m2bin -d ../maspoly/m2bin"
export MOCKALINK="-lpthread -L/usr/X11R6/lib -lX11"




B=./m2bin
rm -f $B/* # alte Kompilate werden entfernt


# Definition Modules :
for d in  DINNGB.def  DIPE.def  MASNCC.def  MASNC.def  MASNCGB.def
do
 echo $d
 m=${d%.def}
 m2 -s $m
done

# Implementation Modules: 
for d in DINNGB.mod  DIPE.mod  MASNCC.mod  MASNCGB.mod  MASNC.mod
do
 echo $d
 m=${d%.mod}
 m2 -c $m
done

